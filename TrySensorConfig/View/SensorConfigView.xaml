<UserControl x:Class="TrySensorConfig.View.SensorConfigView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:converters="clr-namespace:TrySensorConfig.Converter"
        mc:Ignorable="d ignore"
        >

    <StackPanel Orientation="Vertical">
        <TextBox Text="{Binding Name, Mode=OneWay}" Padding="10"/>
        <TextBox Text="{Binding LowerThreshold, Mode=TwoWay, Converter={converters:StringConverter}}" Padding="10"/>
        <TextBox Text="{Binding UpperThreshold, Mode=TwoWay, Converter={converters:StringConverter}}" Padding="10"/>
    </StackPanel>
</UserControl>
